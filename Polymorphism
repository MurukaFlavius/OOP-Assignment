class Vehicle:
    def move(self):
        pass   # placeholder (to be overridden)


class Car(Vehicle):
    def move(self):
        print("Driving ğŸš—")


class Plane(Vehicle):
    def move(self):
        print("Flying âœˆï¸")


class Boat(Vehicle):
    def move(self):
        print("Sailing â›µ")


# Example usage
vehicles = [Car(), Plane(), Boat()]

for v in vehicles:
    v.move()   # Each one behaves differently!

