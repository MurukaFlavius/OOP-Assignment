# Activity 2: Polymorphism Challenge 🎭

class Vehicle:
    def move(self):
        pass   # placeholder (to be overridden)


class Car(Vehicle):
    def move(self):
        print("Driving 🚗")


class Plane(Vehicle):
    def move(self):
        print("Flying ✈️")


class Boat(Vehicle):
    def move(self):
        print("Sailing ⛵")


# Example usage
vehicles = [Car(), Plane(), Boat()]

for v in vehicles:
    v.move()   # Each one behaves differently!

